{
  "_ecg-comment": "Alle Platzhalter werden durch Daten aus der pom.xml waehrend des Maven Prozesses ersetzt.",
  "name": "ecg-${project.artifactId}",
  "version": "${project.version}",
  "author": "Marcel Emmert",
  "summary": "${project.description}",
  "license": "TODO",
  "source": "${project.scm.url}",
  "project_page": "${project.url}",
  "issues_url": "${project.issueManagement.url}",
  "dependencies": [
    {
      "name": "puppetlabs/powershell",
      "version_requirement": ">= 1.0.5 < 1.1.0"
    }
  ],
  "_ecg-buildserver-data": [
    {
      "jobname": "${env.JOB_NAME}",
      "buildnumber": "${env.BUILD_NUMBER}",
      "buildurl": "${env.BUILD_URL}",
      "buildtime": "${custom.build.timestamp}",
      "buildactivator": "${env.BUILD_USER_ID}",
      "buildhost": "${env.NODE_NAME}"
    }
  ],
  "_ecg-scm-data": [
    {
      "scmurl": "${env.GIT_URL}",
      "scmbranch": "${env.GIT_BRANCH}",
      "scmcommit": "${env.GIT_COMMIT}"
    }
  ]
}
